{
  "name": "celeste",
  "displayName": "Celeste",
  "description": "Must-have extension for Celeste modders working with Everest.",
  "version": "0.0.1",
  "publisher": "frqstbite",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "celeste.mapEditor",
        "displayName": "Map Editor",
        "selector": [
          {
            "filenamePattern": "**/Maps/**/*.bin"
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "celeste",
          "title": "Celeste",
          "icon": "assets/everest.png"
        }
      ]
    },
    "views": {
      "celeste": [
        {
          "id": "celeste.attributeEditor",
          "name": "Attribute Editor",
          "icon": ""
        },
        {
          "id": "celeste.mapGraph",
          "name": "Map Graph",
          "icon": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "path": "^0.12.7",
    "steam-path": "^1.0.2"
  }
}
