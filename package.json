{
  "name": "celeste",
  "displayName": "Celeste",
  "description": "Must-have extension for Celeste modders working with Everest.",
  "version": "0.0.1",
  "publisher": "frqstbite",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "celeste.mapEditor",
        "displayName": "Map Editor",
        "selector": [
          {
            "filenamePattern": "**/Maps/**/*.bin"
          }
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "**/everest.json",
        "url": "./src/schemas/everest.json"
      },
      {
        "fileMatch": "**/Maps/**/*.meta.json",
        "url": "./src/schemas/map.meta.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "celeste",
          "title": "Celeste",
          "icon": "assets/everest.png"
        }
      ]
    },
    "views": {
      "celeste": [
        {
          "id": "celeste.attributeEditor",
          "name": "Attribute Editor",
          "icon": "assets/everest.png"
        },
        {
          "id": "celeste.mapGraph",
          "name": "Map Graph",
          "icon": "assets/everest.png"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rimraf out/",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{json,xml,xsd,yaml,yml}\" out/",
    "compile": "npm run clean && tsc -p ./ && npm run copyfiles",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@vscode/test-electron": "^2.3.6",
    "copyfiles": "^2.4.1",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "path": "^0.12.7",
    "steam-path": "^1.0.2"
  }
}
